#include <iostream>
using namespace std;

class node{
    public:
    int data;
    node* left;
    node* right;

    node(int val){
        data = val;
        left = right = NULL;
    }
};

class maxHeap{
    int *arr;
    int size;
    int capp;

    public:
    maxHeap(int s){
        capp = s;
        size = 0;
        arr = new int[capp + 1];
    }

    //---------- HELPER FUCNTIONS ----------//
    int getParent(int i){
        return i / 2;
    }

    int getLeft(int i){
        return 2 * i;
    }

    int getRight(int i){
        return 2 * i + 1;
    }

    //--------- MAIN FUCNTIONS ----------//
    void insert(int val){
        if(size >= capp){
            cout << "Heap is FULL" << endl;
            return;
        }

        size = size + 1;
        int index = size;
        arr[index] = val;

        while(index > 1){
            int parent = getParent(index);
            if(arr[parent] < arr[index]){
                swap(arr[parent], arr[index]);
                index = parent;
            }
            else{
                return;
            }
        }
    }

    void print(){
        for(int i = 1; i < size + 1; i++){
            cout << arr[i] << " ";
        }
    }

    void deleteRoot(){
        if(size == 0){
            cout << "Nothing to Delete" << endl;
            return;
        }

        arr[1] = arr[size];
        size--;

        int i = 1;
        while(i < size){
            int leftIndex = getLeft(i);
            int rightIndex = getRight(i);

            if(leftIndex < size && arr[i] < arr[leftIndex]){
                swap(arr[i],arr[leftIndex]);
                i = leftIndex;
            }
            else if(rightIndex < size && arr[i] < arr[rightIndex]){
                swap(arr[i],arr[rightIndex]);
                i = rightIndex;
            }
            else{
                return;
            }
        }
    }
};    
int main(){

    maxHeap h(10);
    h.insert(50);
    h.insert(30);
    h.insert(40);
    h.insert(10);
    h.insert(20);
    h.insert(60);
    h.insert(55);
    h.print();
    cout << endl;
    h.deleteRoot();
    h.print();

    
return 0;
}
